<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_topwave"
    tools:context="Activity2">

    <Button
        android:id="@+id/getRecords"
        android:layout_width="137dp"
        android:layout_height="42dp"
        android:text="check Records"
        android:textSize="10dp"
        app:backgroundTint="#F44336"

        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/CashBalanceDisplay"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <Button
        android:id="@+id/activity2Button"
        android:layout_width="107dp"
        android:layout_height="91dp"
        android:text="2k"
        android:textSize="25dp"
        app:backgroundTint="#F44336"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPortal"
        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:id="@+id/goToActivity4"
        android:layout_width="95dp"
        android:layout_height="93dp"
        android:background="@drawable/round_btn"
        android:elevation="6dp"
        android:text="Ready"
        android:textSize="15sp"

        android:layout_margin="50dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="138dp"
        android:layout_height="92dp"
        android:gravity="center"
        android:hint="count no. of documents "
        android:text=""
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="#F44336"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/searchPortal"
        android:layout_width="308dp"
        android:layout_height="47dp"
        android:text="Search Challenge"
        android:visibility="gone"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.04" />


    <TextView
        android:id="@+id/CashBalanceDisplay"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:gravity="center"

        android:hint="Account Balance"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="18dp"/>
        <!--app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" -->

    <!-- FOR TEXT @+ID CASH DISPLAY -->

    <TextView
        android:id="@+id/challenge_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select challenge"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="12dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/challenge_header"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="30dp"
        android:columnCount="2"
        android:rowCount="4">

        <!-- FIRST ROW-->

        <androidx.cardview.widget.CardView
            android:id="@+id/card1k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_euro_21" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MK 1000"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_explore_arena24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MK 2000"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ROW NUMBER 2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/card5k"
